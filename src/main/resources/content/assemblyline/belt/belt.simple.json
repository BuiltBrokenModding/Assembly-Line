  "render": {
    "contentID": "assemblyline:beltSimple",
    "type": "tile",
    "tileClass": "com.builtbroken.assemblyline.content.belt.gen.TileEntityWrappedSimpleBelt",
    "states": [
      {
        "id": "base",
        "renderType": "model",
        "modelID": "assemblyline:belt.simple.flat",
        "textureID": "assemblyline:belt.simple.flat.0"
      },
      {
        "id": "item",
        "renderType": "model",
        "parent": "base"
      },
      {
        "id": "tile",
        "renderType": "model",
        "parent": "base",
        "offset": {
          "y": 0.5
        }
      },
      {
        "id": "belt.simple.flat",
        "modelID": "assemblyline:belt.simple.flat",
        "renderType": "model",
        "parent": "tile",
        "renderOnlyParts": false,
        "parts": [
          "c1",
          "c2",
          "c3",
          "c4",
          "BottomBelt",
          "TopBelt"
        ]
      },
      {
        "id": "belt.simple.incline",
        "modelID": "assemblyline:belt.simple.incline",
        "textureID": "assemblyline:belt.simple.incline.0",
        "renderType": "model",
        "parent": "tile"
      },
      {
        "id": "belt.simple.decline",
        "modelID": "assemblyline:belt.simple.decline",
        "textureID": "assemblyline:belt.simple.decline.0",
        "renderType": "model",
        "parent": "tile"
      },
      {
        "forEach": {
          "values": [
            {
              "type": "flat",
              "end": 13
            },
            {
              "type": "incline",
              "end": 23
            },
            {
              "type": "decline",
              "end": 23
            }
          ],
          "forEach": {
            "values": [
              {
                "dir": "north",
                "yaw": 0
              },
              {
                "dir": "east",
                "yaw": -90
              },
              {
                "dir": "south",
                "yaw": 180
              },
              {
                "dir": "west",
                "yaw": 90
              }
            ],
            "for": {
              "start": 0,
              "end": "%end%",
              "id": "frame",
              "data": {
                "id": "%type%.%dir%.%frame%",
                "textureID": "assemblyline:belt.simple.%type%.%frame%",
                "renderType": "model",
                "parent": "belt.simple.%type%",
                "combineRotations": true,
                "rotation": {
                  "yaw": "%yaw%"
                }
              }
            }
          }
        }
      }
    ]
  },
  "texture:1": {
    "for": {
      "start": 0,
      "end": 13,
      "data": {
        "key": "assemblyline:belt.simple.flat.%number%",
